generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String    @id @default(cuid())
  name               String
  email              String
  emailVerified      Boolean   @default(false)
  mustChangePassword Boolean   @default(false)
  image              String?
  sessions           Session[]
  accounts           Account[]
  deletedAt          DateTime?
  role               String?
  banned             Boolean?  @default(false)
  banReason          String?
  banExpires         DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  userProjects       UserProject[]
  issues             Issue[]
  attachments        Attachment[]
  issueAudits        IssueAudit[]
  settings           Setting[]
  comments           Comment[]           @relation("CommentAuthor")
  filters            Filter[]
  customFieldOptions CustomFieldOption[]
  watcherIssues      WatcherIssue[]

  @@unique([email])
  @@index([deletedAt]) // For soft delete queries
  @@index([email, deletedAt]) // For authentication queries
  @@index([banned, banExpires]) // For ban checks
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@index([userId, expiresAt]) // For session cleanup queries
  @@index([expiresAt]) // For expired session cleanup
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([providerId, accountId]) // Prevent duplicate OAuth accounts
  @@index([userId, providerId]) // For user account lookups
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([identifier, value]) // For verification lookups
  @@index([expiresAt]) // For cleanup of expired verifications
}

model Project {
  id                  String  @id @default(cuid())
  name                String
  description         String?
  image               String?
  inheritCustomFields Boolean @default(false)
  visibility          String  @default("PUBLIC") // PUBLIC, SEMI_PUBLIC, PRIVATE, PROTECTED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  issues       Issue[]
  customFields CustomField[]
  userProjects UserProject[]
  settings     Setting[]
  filters      Filter[]

  @@index([visibility, createdAt]) // For filtering by visibility
  @@index([name]) // For search and sorting
  @@index([createdAt]) // For chronological sorting
}

model Filter {
  id          String  @id @default(cuid())
  name        String
  description String?
  isDefault   Boolean @default(false)
  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId      String?
  user        User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  filterFields FilterField[]
}

model FilterField {
  id            String       @id @default(cuid())
  filterId      String
  filter        Filter       @relation(fields: [filterId], references: [id], onDelete: Cascade)
  operator      String
  value         String
  customFieldId String?
  customField   CustomField? @relation(fields: [customFieldId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  color String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  issueTags IssueTag[]
}

model IssueTag {
  id      String @id @default(cuid())
  issueId String
  issue   Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)
  tagId   String
  tag     Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([issueId, tagId]) // Prevent duplicate tag assignments
  @@index([issueId]) // For issue tag queries
  @@index([tagId]) // For tag usage queries
}

model Issue {
  id        String  @id @default(cuid())
  number    Int
  title     String
  summary   String
  creatorId String
  creator   User    @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments          Comment[]
  attachments       Attachment[]
  customFieldValues CustomFieldValue[]
  dependencies      IssueDependency[]  @relation("IssueDependency")
  blocking          IssueDependency[]  @relation("BlockingIssue")
  issueAudits       IssueAudit[]
  issueTags         IssueTag[]
  watcherIssues     WatcherIssue[]

  @@unique([projectId, number]) // Ensure unique issue numbers per project
  @@index([projectId, createdAt]) // For chronological project issues
  @@index([createdAt]) // For chronological sorting
  @@index([updatedAt]) // For recently updated queries
}

model IssueDependency {
  id           String @id @default(cuid())
  issueId      String
  issue        Issue  @relation("IssueDependency", fields: [issueId], references: [id], onDelete: Cascade)
  dependencyId String
  dependency   Issue  @relation("BlockingIssue", fields: [dependencyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([issueId, dependencyId]) // Prevent duplicate dependencies
  @@index([issueId]) // For issue dependency queries
  @@index([dependencyId]) // For blocking issue queries
}

model Comment {
  id      String  @id @default(cuid())
  content String
  userId  String? // Track comment author
  user    User?   @relation("CommentAuthor", fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  issueId String
  issue   Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)

  @@index([issueId, createdAt]) // For chronological comment queries
  @@index([userId]) // For user comment queries
}

model Attachment {
  id       String  @id @default(cuid())
  url      String
  name     String
  size     Int     @default(0)
  type     String  @default("IMAGE") // IMAGE, VIDEO, AUDIO, DOCUMENT, OTHER, TEXT
  mimeType String? // MIME type for better file handling
  userId   String?
  user     User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
  issueId  String
  issue    Issue   @relation(fields: [issueId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([issueId, type]) // For filtering attachments by type
  @@index([userId]) // For user attachment queries
  @@index([createdAt]) // For chronological sorting
}

model Setting {
  id        String   @id @default(cuid())
  key       String
  value     String
  scope     String // GLOBAL, PROJECT, USER
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([scope, key, projectId, userId]) // Ensure unique settings per scope
  @@index([scope, key]) // For global settings lookup
  @@index([projectId, key]) // For project settings lookup
  @@index([userId, key]) // For user settings lookup
}

model CustomField {
  id                 String   @id @default(cuid())
  type               String   @default("TEXT") // TEXT, TEXT_AREA, NUMBER, DATE, BOOLEAN, SELECT, MULTI_SELECT, USER, FILE, STATE, LINK
  label              String
  placeholder        String?
  tableShow          Boolean  @default(true)
  defaultValue       String?
  isObsolete         Boolean  @default(false)
  description        String?
  dependencyOperator String?  @default("AND") // AND, OR
  required           Boolean  @default(false)
  order              Int      @default(0) // For field ordering
  projectId          String?
  project            Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customFieldOptions      CustomFieldOption[]
  customFieldValues       CustomFieldValue[]
  customFieldDependencies CustomFieldDependency[] @relation("CustomFieldDepending")
  customFieldsDepending   CustomFieldDependency[] @relation("CustomFieldDependency")
  filterFields            FilterField[]

  @@index([projectId, isObsolete, order]) // For ordered field queries
  @@index([projectId]) // For project field queries
}

model CustomFieldValue {
  id            String      @id @default(cuid())
  value         String
  issueId       String
  issue         Issue       @relation(fields: [issueId], references: [id], onDelete: Cascade)
  customFieldId String
  customField   CustomField @relation(fields: [customFieldId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([issueId, customFieldId]) // Ensure one value per field per issue
  @@index([issueId]) // For issue custom field queries
  @@index([customFieldId, value]) // For filtering by custom field value
}

model CustomFieldDependency {
  id                      String      @id @default(cuid())
  condition               String
  value                   String
  customField             CustomField @relation("CustomFieldDepending", fields: [customFieldId], references: [id], onDelete: Cascade)
  customFieldId           String
  customFieldDependency   CustomField @relation("CustomFieldDependency", fields: [customFieldDependencyId], references: [id], onDelete: Cascade)
  customFieldDependencyId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([customFieldId, customFieldDependencyId, condition, value]) // Prevent duplicate dependencies
  @@index([customFieldId]) // For field dependency queries
  @@index([customFieldDependencyId]) // For reverse dependency queries
}

model CustomFieldOption {
  id             String      @id @default(cuid())
  value          String?
  userId         String?
  user           User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  customFieldId  String
  isIssueClosing Boolean     @default(false)
  color          String?
  customField    CustomField @relation(fields: [customFieldId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([customFieldId, value]) // Prevent duplicate options
}

model UserProject {
  id        String  @id @default(cuid())
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  role      String  @default("VIEWER") // OWNER, ADMIN, QA, CONTRIBUTOR, VIEWER, REPORTER

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, projectId]) // Prevent duplicate project memberships
  @@index([userId]) // For user project queries
  @@index([projectId, role]) // For project member queries by role
  @@index([projectId]) // For project member queries
}

model WatcherIssue {
  id      String @id @default(cuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  issueId String
  issue   Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, issueId]) // Prevent duplicate assignments with same role
  @@index([userId]) // For user issue queries by role
  @@index([issueId]) // For issue participant queries by role
}

model IssueAudit {
  id        String   @id @default(cuid())
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action    String
  field     String? // Track which field was changed
  oldValue  String?
  newValue  String?
  metadata  Json?    @default("{}") // Extensible metadata for audit details
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([issueId, createdAt]) // For chronological audit trail
  @@index([userId, createdAt]) // For user activity queries
  @@index([action, createdAt]) // For action-based queries
  @@index([issueId, action]) // For specific action queries on issues
}
